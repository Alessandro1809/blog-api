generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum PostStatus {
  DRAFT
  PUBLISHED
}

enum PostCategory {
  ARTICULOS
  GUIAS_LEGALES
  JURISPRUDENCIA_COMENTADA
  NOTICIAS
  OPINION
  RESENAS
}

model Post {
  id  String @id @default(cuid())
  slug String @unique
  excerpt String?
  title String
  content Json?
  categorie PostCategory?
  tags String[] @default([])
  status PostStatus @default(DRAFT)
  featuredImage String?
  authorId String
  views Int @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  postViews PostView[]

  @@map("posts")
}

model PostView {
  id String @id @default(cuid())
  postId String
  post Post @relation(fields: [postId], references: [id], onDelete: Cascade)
  ipAddress String
  userAgent String?
  viewedAt DateTime @default(now())

  @@index([postId, ipAddress, viewedAt])
  @@map("post_views")
}
